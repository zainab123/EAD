@{
    ViewBag.Title = "contact";
}

@{
    if (IsPost)
    {

        var name = Request["name"];
        var email = Request["email"];
        var subject = Request["subject"];
        var message = Request["message"];

        <p> @name " " @email " " + " " @subject " " + @message  </p>

        Response.Redirect("~/home/SaveContacter");

    }


}
<body style="background-color:#cafac2">

    <div class="contact">

        <div class="container">
            <h1>Contact</h1>
            <div class="contact-form">

                <div class="col-md-8 contact-grid">
                    <form action="/home/SaveContacter" method="POST">
                        <strong>Name</strong><br>
                        <input type="Text" id="name" name="name" placeholder="Enter your name" required />
                        <span id="name1"></span><br>

                        <br />
                        <strong>Email</strong><br>
                        <input type="Text" id="email" name="email" placeholder="Enter your Email" required />
                        <span id="email1"></span><br>

                        <strong>Subject</strong><br>
                        <input type="Text" id="name" name="subject" placeholder="Enter your Subject" required />
                        <span id="name1"></span><br>

                        <strong>Message</strong><br>
                        <textarea name="message" cols="15" rows="5"> </textarea>

                        <br><br><br><br><br>

                        <button type="submit" class="btn btn-primary btn-block" value="submit" onclick="validate()"> Send </button> <br />
                    </form>
                </div>
                <div class="col-md-4 contact-in">

                    <div class="address-more">
                        <h4>Circular road</h4>
                        <p>MBC</p>
                        <p>near habib bank</p>
                    </div>
                    <div class="address-more">
                        <h4>Circular road</h4>
                        <p>Tel:1115550001</p>
                        <p>Fax:190-4509-494</p>
                        <p>Email: zainab.lahore@gmail.com</p>
                    </div>

                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="map">

            </div>
        </div>

    </div>
    <!--//content-->

</body>
</html>
